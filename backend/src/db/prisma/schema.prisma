generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String                    @id @default(uuid())
  userName        String
  email           String                    @unique
  password        String
  createdAt       DateTime                  @default(now())
  updatedAt       DateTime                  @updatedAt
  avatarUrl       String?
  lastSeen        DateTime?
  status          String?                   @default("offline")
  about           String?
  conversations   ConversationParticipant[]
  myContacts      Contact[]                 @relation("UserContacts")
  myAddedContacts Contact[]                 @relation("AddedUser")
}

model Conversation {
  id            String                    @id @default(uuid())
  name          String?
  isGroup       Boolean                   @default(false)
  createdAt     DateTime                  @default(now())
  updatedAt     DateTime                  @updatedAt
  messages      Message[]                 @relation("ConversationMessages")
  participants  ConversationParticipant[]
  lastMessageId String?                   @unique
  lastMessage   Message?                  @relation("ConversationLastMessage", fields: [lastMessageId], references: [id])
}

model Contact {
  id          String   @id @default(uuid())
  ownerId     String
  addedUserId String
  addedAt     DateTime @default(now())
  isBlocked   Boolean  @default(false)
  nickName    String?
  owner       User     @relation("UserContacts", fields: [ownerId], references: [id], onDelete: Cascade)
  addedUser   User     @relation("AddedUser", fields: [addedUserId], references: [id], onDelete: Cascade)

  @@unique([ownerId, addedUserId])
}

model ConversationParticipant {
  id             String       @id @default(uuid())
  userId         String
  conversationId String
  joinedAt       DateTime     @default(now())
  user           User         @relation(fields: [userId], references: [id])
  conversation   Conversation @relation(fields: [conversationId], references: [id])

  @@unique([userId, conversationId])
}

model Message {
  id             String        @id @default(uuid())
  message        String
  senderId       String
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  conversationId String
  conversation   Conversation? @relation("ConversationMessages", fields: [conversationId], references: [id])
  lastMessageOf  Conversation? @relation("ConversationLastMessage")
}
